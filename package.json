{
  "name": "indesign-mcp",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "start:http": "tsx src/http-server.ts",
    "start:https": "tsx src/https-server.ts",
    "dev": "tsx watch src/index.ts",
    "dev:http": "./scripts/dev-http.sh",
    "dev:https": "./scripts/dev-https.sh",
    "setup:https": "./scripts/setup-https.sh",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --ignore-pattern \"src/guidance/**\" --ignore-pattern \"src/intelligence/**\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --ignore-pattern \"src/guidance/**\" --ignore-pattern \"src/intelligence/**\" --fix",
    "build:tests": "tsc -p tsconfig.tests.json --pretty",
    "typecheck": "npm run build && npm run build:tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@types/node": "^22.15.30",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "zod": "^3.25.57"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "fast-glob": "^3.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-morph": "^26.0.0"
  }
}

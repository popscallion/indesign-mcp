{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "composite": true,
    "paths": {
      "@mcp/shared/*": ["./packages/shared/src/*"],
      "@mcp/shared": ["./packages/shared/src/index.ts"]
    },
    "baseUrl": "."
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/indesign-server" },
    { "path": "./packages/illustrator-server" }
  ]
}